    <mjml>
        <mj-body>
            <mj-section>
                <mj-column>

                    <mj-image width="100px" src="/assets/img/logo-small.png"></mj-image>

                    <mj-divider border-color="#F45E43"></mj-divider>

                    <mj-text font-size="20px" color="#F45E43" font-family="helvetica">Demande de renseignement
                        complémentaire</mj-text>
                        <p>
                            Une nouvelle personne souhaiterais obtenir plus plus d'information à propos de l'offre : 
                            <a href="{{url('annonce_article', {id: contact.annonce.id}) }}">{{ contact.annonce.title }}</a>
                        </p>
                    <table class="table table-striped" border="0" cellpadding="0" cellspacing="0" role="presentation" widh="100%">
                        <tr>
                                <td>
                                    Titre de l'annonce
                                </td>
                                <td><a href="{{ url('annonce_article', {id: contact.annonce.id}) }}">{{contact.annonce.title}}</a></td>
                        </tr>
                        <tr>
                            <td>Prénom</td>
                            <td>{{contact.firstname}}</td>
                        </tr>
                        <tr>
                            <td>Nom</td>
                            <td>{{contact.lastname}}</td>
                        </tr>
                        <tr>
                            <td>
                            Email
                        </td>
                        <td>{{contact.email}}</td>
                        </tr>
                        <tr>
                            <td>Message</td>
                            <td>{{ contact.message | nl2br }}</td>
                        </tr>
                    </table>
                </mj-column>
            </mj-section>
        </mj-body>
    </mjml>